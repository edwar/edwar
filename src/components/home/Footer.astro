---
import Section from "@/components/ui/Section.astro";
import { Icon } from 'astro-icon/components';
---

<Section>
  <footer class="w-full py-12">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Main content -->
      <div class="flex flex-col items-center space-y-6">
        <!-- Social links -->
        <div class="flex space-x-6">
          <a href="https://github.com/edwaramaya" 
             target="_blank" 
             rel="noopener noreferrer" 
             class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors duration-200"
             aria-label="GitHub">
            <Icon name="arcticons:github" width="32" height="32" />
          </a>
          <a href="https://linkedin.com/in/edwaramaya" 
             target="_blank" 
             rel="noopener noreferrer"
             class="text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors duration-200"
             aria-label="LinkedIn">
            <Icon name="arcticons:linkedin" width="32" height="32" />
          </a>
        </div>

        <!-- Copyright -->
        <div class="text-center">
          <p class="text-sm text-gray-500 dark:text-gray-400 font-light">
            &copy; {new Date().getFullYear()} Edwar Amaya
          </p>
        </div>
      </div>
    </div>
  </footer>
</Section>