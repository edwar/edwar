---
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
const { class: className, image, icons, title, description, link } = Astro.props;
---
<div
  class={cn(
    "group/bento shadow-input flex flex-col rounded-xl border border-white/20 bg-slate-800/60 backdrop-blur-sm shadow-none transition duration-200 hover:shadow-xl overflow-hidden h-full",
    className,
  )}
>
  {image && (
    <div class="min-h-60 max-h-60 overflow-hidden">
      <Image 
        src={image} 
        alt={title} 
        width={900} 
        height={600} 
        class="w-full h-full object-cover transition-transform duration-300 scale-105 group-hover/bento:scale-110" 
      />
    </div>
  )}
  
  <div class="flex flex-col flex-1 p-6 transition duration-200 group-hover/bento:translate-x-2">
    <div class="flex flex-wrap gap-2 mb-4">
      {Array.isArray(icons) && icons.map((icon: string, index: number) => (
        <div class="flex items-center justify-center p-1.5 rounded-lg bg-white/90 backdrop-blur-sm hover:bg-white transition-all duration-300 hover:scale-110 hover:shadow-lg hover:shadow-fuchsia-600 cursor-pointer">
          <Icon name={icon} width="24" height="24" class="text-white" />
        </div>
      ))}
    </div>
    
    <h3 class="mb-2 text-xl font-bold text-white">
      {title}
    </h3>
    
    <p class="text-sm text-gray-300 flex-1">
      {description}
    </p>
    
    <div class="mt-4 pt-4 border-t border-white/10">
      <a href={link} target="_blank" rel="noopener noreferrer" class="text-sm font-medium text-fuchsia-400 hover:text-fuchsia-300 transition-colors cursor-pointer">
        View Project â†’
      </a>
    </div>
  </div>
</div>